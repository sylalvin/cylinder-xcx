/* pages/conScan/conScan.wxss */
.camera{
  width: 300px;
  height: 300px;
  margin: auto;
}
.line{
  background:rgb(5, 207, 5);
  height:5px;
  width:180px;
  margin-left: calc(50% - 90px);
  position: absolute;
  top: 20px;
  opacity: 1;
}
.input{
  border: 1px solid #666;
  padding-left: 20px;
  border-radius: 5px;
  margin: 10px;
}
.camera_outside{
  z-index: 1;
}
.line_outside{
  z-index: 9999;
}