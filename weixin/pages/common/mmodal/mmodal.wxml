<view class='mask' wx:if='{{show}}'>
  <view class='modal-content' style='height:{{height}};width:{{width}}'>
    <view class='modal-header'>
      <view class="header-text">{{ headerText }}</view>
    </view>
    <scroll-view scroll-y class='main-content'>
      <slot></slot>
    </scroll-view>
    <view class='modal-footer'>
      <view wx:if='{{showCancel}}' class='cancel-btn' style='color:rgba(7,17,27,0.6)' bindtap='cancel'> {{cancelText}} </view>
      <view class='confirm-btn' style='color:#13b5f5' bindtap='confirm'> {{confirmText}} </view>
    </view>
  </view>
</view>
