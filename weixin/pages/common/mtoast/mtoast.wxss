.wx-toast-box{
  display: flex;
  width: 100%;
  justify-content: center;
  position: fixed;
  z-index: 999;
  top:30%;
  opacity: 0;
}
.wx-toast-content{
  max-width: 80%;
  border-radius:10rpx;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.8);
  z-index: 1000;
}
.wx-toast-toast{
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 1.2rem;
  text-align: left;
  z-index: 1001;
}