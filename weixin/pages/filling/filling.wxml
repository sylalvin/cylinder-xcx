<view class="page">
  <view class="page__bd">
    <view class="page__bd">
        <view class="weui-tab__panel">
          <view class="weui-tab__content">
            <scroll-view scroll-y="true" style="height: {{windowHeight - 50}}px; padding-bottom: 5%;margin-bottom: 1%;" bindscrolltoupper="upper" bindscrolltolower="lower">
              <block wx:for="{{scanLogs}}" wx:key="index" wx:for-item='item'>
                <view data-detection-Id="{{ item.id }}" bindtap="jumpDetectionDetail" class="weui-cell weui-cell_access p-0" hover-class="weui-cell_active">
                  <view class="weui-cells weui-cells_after-title weui-cell__ft_in-access">
                      <view class="weui-cell__bd weui-cell__left" style="color: red;">{{index + 1}} >>> {{ item.name }}</view>
                      <view class="weui-cell__bd weui-cell__left">开始时间: {{ item.beginDate }}</view>
                      <!-- <view class="weui-cell__bd weui-cell__left">充装介质: {{ item.name }}</view> -->
                      <view class="weui-cell__bd weui-cell__left">气瓶数量: {{ item.quantity }}</view>
                      <view class="weui-cell__bd weui-cell__left">批次号码: {{ item.productionBatch }}</view>
                      <view class="weui-cell__bd weui-cell__left">完成状态: {{ item.status }}</view>
                  </view>
                </view>
              </block>
              <view class="weui-loadmore weui-loadmore_line">
                <view class="weui-loadmore__tips weui-loadmore__tips_in-line">{{dataStatusText}}</view>
              </view>
            </scroll-view>
          </view>
        </view>
      </view>
  </view>
  <view class="weui-navbar">
      <view class="weui-navbar__item">
        <view class="weui-navbar__title" catchtap="onSubmit">新建充装任务</view>
      </view>
  </view>
</view>